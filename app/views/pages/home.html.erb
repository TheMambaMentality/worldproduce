<!-- NEWS -->
<section class="section section--news">
  <div class="section__inner">
    <p class="section__eyebrow">NEWS</p>
    <h2 class="section__title section__title--strong">News</h2>
    <p class="section__lead section__lead--narrow">最新のお知らせを掲載しています。</p>

    <div class="newsList">
      <% @latest_news.each do |article| %>
        <article class="newsItem">
          <%= link_to news_path(article), class: "newsItem__link" do %>
            <div class="newsItem__thumb">
              <% if article.images.attached? %>
                <%= image_tag article.images.first, class: "newsItem__img", alt: article.title %>
              <% else %>
                <%= image_tag "logo.jpg", class: "newsItem__img", alt: "WORLD PRODUCE" %>
              <% end %>
            </div>

            <time class="newsItem__date"><%= article.published_at.strftime("%Y.%m.%d") %></time>
            <h3 class="newsItem__title"><%= article.title %></h3>
          <% end %>
        </article>
      <% end %>
    </div>

    <div class="news-more">
    <%= link_to "News一覧へ", news_index_path, class: "btn btn--ghost btn--dark" %>
    </div>
  </div>
</section>

<!-- CTA -->
<section class="cta">
  <div class="cta__inner">
    <div class="cta__text">
      <h2 class="cta__title">ご相談はこちら</h2>
      <p class="cta__lead">企画・流通・運営のこと、まずは気軽にお問い合わせください。</p>
    </div>
    <div class="cta__actions">
      <a class="btn btn--primary" href="<%= contact_path %>">Contact</a>
      <a class="btn btn--ghost" href="<%= news_index_path %>">News</a>
    </div>
  </div>
</section>