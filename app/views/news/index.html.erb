<section class="section">
  <div class="section__inner">
    <h1 class="section__title">News</h1>
    <p class="section__lead">最新のお知らせを掲載しています。</p>

    <div class="newsList">
      <% @news.each do |news| %>
        <article class="newsItem">
          <%= link_to news_path(news), class: "newsItem__link" do %>

            <div class="newsItem__thumb">
              <% if news.images.attached? %>
                <%= image_tag news.images.first, class: "newsItem__img", alt: news.title %>
              <% else %>
                <%= image_tag "logo.jpg", class: "newsItem__img", alt: "WORLD PRODUCE" %>
              <% end %>
            </div>

            <time class="newsItem__date">
              <%= news.published_at.strftime("%Y.%m.%d") %>
            </time>

            <h2 class="newsItem__title"><%= news.title %></h2>
          <% end %>
        </article>
      <% end %>
    </div>
  </div>
</section>