<section class="section">
  <div class="section__inner">
    <header class="section__head">
      <h1 class="section__title">Store</h1>
      <p class="section__lead">店舗一覧（後で写真・文言を差し替え）</p>
    </header>

    <section class="store-grid">
      <% (@stores || []).each do |store| %>
        <article class="store-card">
          <div class="store-card__photo store-card__photo--placeholder">
            <span>PHOTO</span>
          </div>

          <div class="store-card__body">
            <h2 class="store-card__name"><%= store[:name] %></h2>
            <p class="store-card__facility"><%= store[:facility] %></p>

            <dl class="store-card__meta">
              <div>
                <dt>住所</dt>
                <dd><%= store[:address] %></dd>
              </div>
              <div>
                <dt>電話</dt>
                <dd><a href="tel:<%= store[:tel] %>"><%= store[:tel] %></a></dd>
              </div>
            </dl>
          </div>
        </article>
      <% end %>
    </section>
  </div>
</section>