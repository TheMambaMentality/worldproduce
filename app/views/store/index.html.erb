<section class="section">
  <div class="section__inner">
    <header class="section__head">
      <h1 class="section__title">Store</h1>
      <p class="section__lead">店舗一覧</p>
    </header>

    <section class="store-grid">
      <% (@stores || []).each do |store| %>
        <article class="store-card">
          <div class="store-card__photo">
            <%= image_tag "stores/#{store[:image]}", alt: store[:name] %>
          </div>

          <div class="store-card__body">
            <h2 class="store-card__name"><%= store[:name] %></h2>
            <p class="store-card__facility"><%= store[:facility] %></p>

            <dl class="store-card__meta">
              <div>
                <dt>住所</dt>
                <dd>
                  <a href="<%= store[:map_url] %>" target="_blank" rel="noopener">
                    <%= store[:address] %>
                  </a>
                </dd>
              </div>
              <div>
                <dt>電話</dt>
                <dd><a href="tel:<%= store[:tel] %>"><%= store[:tel] %></a></dd>
              </div>
            </dl>

            <p class="store-card__map">
              <a href="<%= store[:map_url] %>" target="_blank" rel="noopener">
                Google Mapで見る
              </a>
            </p>
          </div>
        </article>
      <% end %>
    </section>
  </div>
</section>